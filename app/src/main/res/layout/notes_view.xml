<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp">
    <LinearLayout
        android:id="@+id/ItemViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/RecyclerItemView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/RecyclerItemView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/A"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/RecyclerItemView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/RecyclerItemView3"
            android:layout_below="@id/RecyclerItemView1"
            android:textSize="12dp"
            android:maxLines="10"
            android:textColor="@color/A"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/RecyclerItemView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="12:00 am"
            android:textSize="10dp"
            android:maxLines="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/A"
            android:padding="3dp"/>
    </LinearLayout>


</LinearLayout>